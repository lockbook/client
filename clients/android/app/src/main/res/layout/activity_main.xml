<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="welcomeActivity"
            type="app.lockbook.Welcome" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="25dp"
        tools:context=".Welcome">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="@string/lockbook"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="40sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:paddingTop="20dp"
            android:paddingBottom="75dp"
            android:text="@string/secure_private_reliable"
            android:textAlignment="center"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/new_lockbook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:backgroundTint="?attr/colorPrimary"
            android:text="@string/new_lockbook"
            android:textColor="#000000"
            android:onClick="@{() -> welcomeActivity.launchNewAccount()}"/>

        <Button
            android:id="@+id/import_lockbook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="?attr/colorPrimary"
            android:text="@string/import_lockbook"
            android:textColor="#000000"
            android:onClick="@{() -> welcomeActivity.launchImportAccount()}"/>


    </LinearLayout>
</layout>
