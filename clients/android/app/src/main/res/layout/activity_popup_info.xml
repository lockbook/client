<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="popUpInfoActivity"
            type="app.lockbook.loggedin.popupinfo.PopUpInfoActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="25dp" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:paddingBottom="15dp"
        android:text="@{`Name: ` + popUpInfoActivity.name}"
        android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:paddingBottom="15dp"
            android:text="@{`ID: ` + popUpInfoActivity.id}"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:paddingBottom="15dp"
            android:text="@{`File Type: ` + popUpInfoActivity.fileType}"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:paddingBottom="15dp"
            android:text="@{`Metadata Version: ` + popUpInfoActivity.metadataVersion}"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:paddingBottom="15dp"
            android:text="@{`Content Version: ` + popUpInfoActivity.contentVersion}"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/new_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:backgroundTint="@color/dark"
            android:fontFamily="monospace"
            android:hint="New Name"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="@color/dark" />

        <Button
            android:id="@+id/submit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="?attr/colorPrimary"
            android:text="Rename File"
            android:textColor="#000000"
            android:onClick="@{() -> popUpInfoActivity.rename()}"/>

    </LinearLayout>
</layout>
